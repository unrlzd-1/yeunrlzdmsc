{
  "version": 2,
  "builds": [
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/upload",
      "dest": "/upload.html"
    },
    {
      "src": "/(.*\\.(mp3|wav|ogg))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/upload",
      "destination": "/upload.html"
    }
  ]
}